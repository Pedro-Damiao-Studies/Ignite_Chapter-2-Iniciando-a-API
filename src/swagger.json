{
  "openapi": "3.0.0",
  "info": {
    "title": "RentX API",
    "description": "RentX API",
    "version": "1.0.0",
    "contact": {
      "name": "Pedro Henrique Ferreira",
      "url": "https://damiao.dev.br",
      "email": "pedrohenriquefcd@gmail.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": [
          "Category"
        ],
        "summary": "Create a category",
        "description": "Create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "SUV",
                  "description": "A car that combines elements of road-going passenger cars with features from off-road vehicles"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Category created"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      },
      "get": {
        "tags": [
          "Category"
        ],
        "summary": "List categories",
        "description": "List all categories",
        "responses": {
          "200": {
            "description": "Sucess",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/import": {
      "post": {
        "tags": [
          "Category"
        ],
        "summary": "Import categories",
        "description": "Import categories from a CSV file",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "response":{
          "201": {
            "description": "Categories imported"
          }
        }
      }
    },
    "/specifications": {
      "post": {
        "tags": [
          "Specification"
        ],
        "summary": "Create a specification",
        "description": "Create a new specification",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Door Count",
                  "description": "Number of doors"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Specification created"
          },
          "500": {
            "description": "Specification already exists"
          }
        }
      }
    }
  }
}
